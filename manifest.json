{
  "manifest_version": 3,
  "name": "JD Scorer",
  "version": "1.0.0",
  "description": "Analyze job descriptions for readability and bias in real-time.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "JD Scorer - Analyze Job Description"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}